<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    >

    <RelativeLayout
        android:id="@+id/sharere"
        android:background="#efeff4"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dimms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:textColor="@color/black"
        />
        </RelativeLayout>
    <GridView
        android:paddingTop="10dp"
        android:listSelector="#55999999"
        android:layout_above="@+id/sharere"
        android:id="@+id/share_gridview"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:numColumns="4"
        android:background="#efeff4"
        android:layout_height="wrap_content">
    </GridView>
    <RelativeLayout
        android:id="@+id/sharetop"
        android:layout_above="@+id/share_gridview"
        android:layout_width="match_parent"
        android:background="#efeff4"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e1e1e1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/share_text"
            android:layout_marginRight="20dp"
            />
        <View
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:background="#e1e1e1"
            android:layout_toRightOf="@+id/share_text"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shareapp_image"
        android:scaleType="fitCenter"
        android:layout_above="@+id/sharetop"
        />
</RelativeLayout>