<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:background="#44000000"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingBottom="7dp"
        android:gravity="bottom"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/bottompopupwindow_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/yuanjiao"
        android:layout_above="@+id/bottompopupwindow_lin"
        android:layout_marginBottom="7dp"
        >

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottompopupwindow_lin"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/yuanjiao"
        >
        <TextView
            android:id="@+id/bottompopupwindow_dimms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textSize="15sp"
            android:padding="15dp"
            android:textColor="@color/bottomPopupWindowSizeColor"
            />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>